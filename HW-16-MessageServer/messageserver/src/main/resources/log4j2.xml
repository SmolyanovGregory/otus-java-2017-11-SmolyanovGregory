<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>

        <File name="mainLog" fileName="messageServer.log" bufferedIO="false">
            <PatternLayout pattern="%d %-5p [%t] %C{2} - %m%n"/>
        </File>

    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="mainLog"/>
        </Root>
    </Loggers>
</Configuration>